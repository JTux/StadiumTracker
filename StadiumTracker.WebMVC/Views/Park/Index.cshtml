@model IEnumerable<StadiumTracker.Models.ParkModels.ParkListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Stadiums</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Stadium Name
        </th>
        <th>
            City Name
        </th>
        <th>
            Team Name
        </th>
        <th>
            Visited
        </th>
        <th>
            Pin
        </th>
        <th>
            Photo
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ParkName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CityName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HomeTeam.TeamName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsVisited)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HasPin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HasPhoto)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ParkId }) |
            @Html.ActionLink("Details", "Details", new { id = item.ParkId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ParkId })
        </td>
    </tr>
}

</table>
