@model StadiumTracker.Models.VisitModels.VisitDetail

@{
    ViewBag.Title = "Details";
}

<h2 id="page-header">Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Stadium
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Park.ParkName)
        </dd>

        <dt>
            Home Team
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HomeTeam.TeamName)
        </dd>

        <dt>
            Away Team
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AwayTeam.TeamName)
        </dd>

        <dt>
            Visitor
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Visitor.FullName)
        </dd>

        <dt>
            Date of Visit
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VisitDate)
        </dd>

        <dt>
