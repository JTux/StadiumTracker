@model IEnumerable<StadiumTracker.Models.VisitModels.VisitListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Date of Visit
        </th>
        <th>
            Stadium Name
        </th>
        <th>
            Name
        </th>
        <th>
            Pin
        </th>
        <th>
            Photo
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.VisitDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Park.ParkName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Visitor.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GotPin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GotPhoto)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.VisitId }) |
            @Html.ActionLink("Details", "Details", new { id = item.VisitId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.VisitId })
        </td>
    </tr>
}

</table>
