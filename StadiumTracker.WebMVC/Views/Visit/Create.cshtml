@model StadiumTracker.Models.VisitModels.VisitCreate

@{
    ViewBag.Title = "Create";
}

<h2 id="page-header">Record New Visit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Park.ParkName, "Stadium Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ParkId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Park.ParkName, "", new { @class = "text-danger" })
                <p>@Html.ActionLink("Add New Stadium", "../Park/Create")</p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Visitor.FullName, "Visitor Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("VisitorId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Visitor.FullName, "", new { @class = "text-danger" })
                <p>@Html.ActionLink("Add New Person", "../Visitor/Create")</p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.VisitDate, "Visit Date", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.VisitDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.VisitDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GotPin, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.GotPin)
                    @Html.ValidationMessageFor(model => model.GotPin, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GotPhoto, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.GotPhoto)
                    @Html.ValidationMessageFor(model => model.GotPhoto, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
