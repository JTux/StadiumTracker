@using StadiumTracker.WebMVC.Helpers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Stadium Tracker</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/Style.css">
</head>
<body>
    <div class="container body-container">

        <div class="navbar navbar-inverse navbar-fixed-top navbar-details" id="main-nav">
            <div class="navbar-name">
                @Html.ActionLink("Stadium Tracker", "Index", "Home")
            </div>
        </div>

        <div id="belowNav">
            <div class="col-lg-1 col-md-1 fixed-right navbar-details">
                <ul>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "Index", "Park")</li>
                        <li>@Html.ActionLink("Stadiums", "Index", "Park")</li>
                        <li>@Html.ActionLink("Teams", "Index", "Team")</li>
                        <li>@Html.ActionLink("History", "Index", "Visit")</li>
                        <li>@Html.ActionLink("Stats", "Index", "Visitor")</li>
                    }
                </ul>
                <div class="row">
                    <div class="col-lg-1 col-md-1" id="footer">
                        @Html.Partial("_LoginPartial")
                        <footer>
                            <p>&copy; @DateTime.Now.Year</p>
                        </footer>
                    </div>
                </div>
            </div>
            <div class="col-lg-11 col-md-11 scroll-content">
                <div class="container body-content">
                    @RenderBody()
                </div>
            </div>

        </div>


    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
