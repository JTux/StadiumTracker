@using Microsoft.AspNet.Identity;
@model StadiumTracker.Models.TeamModels.TeamDetail

@{
    ViewBag.Title = "Details";
}

<div>
    <h2 id="page-header">
        @Html.DisplayFor(model => model.TeamName)
    </h2>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            League
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LeagueName)
        </dd>

    </dl>
</div>
<p>
    @if (Guid.Parse(User.Identity.GetUserId()) == Model.OwnerId)
    {
        @Html.ActionLink("Edit", "Edit", new { id = Model.TeamId })
    }

    @Html.ActionLink("Back to List", "Index")
</p>
