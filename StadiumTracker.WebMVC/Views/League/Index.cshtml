@model IEnumerable<StadiumTracker.Models.LeagueModels.LeagueListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Existing Leagues</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Name of League
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LeagueName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.LeagueId })
        </td>
    </tr>
}

</table>
