@model StadiumTracker.Models.VisitorModels.VisitorDetail

@{
    ViewBag.Title = "Details";
}

<h2 id="page-header">
    @Html.DisplayFor(model => model.FullName)
</h2>
<p class="detail-buttons">
    @Html.ActionLink("Edit", "Edit", new { id = Model.VisitorId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
<hr />

<div class="col-lg-12">
    <dl class="dl-horizontal">

        <dt>
            Stadiums Visited
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TotalVisits)
        </dd>

        <dt>
            Pins Collected
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TotalPins)
        </dd>

    </dl>
</div>

<div class="col-lg-6">
    <div class="row">
        <p class="chart-name">Games by Month</p>
        <div class="form-group">
            <canvas id="monthChart" width="400" height="150"></canvas>
        </div>
    </div>
</div>
<div class="col-lg-6">
    <div class="row">
        <p class="chart-name">Games by League</p>
        <div class="form-group">
            <canvas id="leagueChart" width="400" height="150"></canvas>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/Chart.js"></script>
    <script src="~/Scripts/Common.js"></script>
    <script>
        //-------------------Visit by Month Bar Chart---------------------------------
        var c = document.getElementById("monthChart");
        var ctx = c.getContext("2d");
        var myBarChart = new Chart(ctx, {
            type: 'bar',
            data:
            {
                labels: ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"],
                datasets: [{
                    label: 'Games Visited By Month',
                    data: [@ViewBag.MonthData],
                    backgroundColor: [
                        'rgba(108, 0, 0, 0.5)',
                        'rgba(180, 0, 0, 0.4)',
                        'rgba(255, 69, 0, 0.4)',
                        'rgba(255, 159, 64, 0.4)',
                        'rgba(255, 206, 86, 0.4)',
                        'rgba(154, 205, 50, 0.4)',
                        'rgba(34, 139, 34, 0.4)',
                        'rgba(75, 208, 192, 0.4)',
                        'rgba(32, 158, 200, 0.4)',
                        'rgba(30, 144, 255, 0.4)',
                        'rgba(0, 0, 205, 0.4)',
                        'rgba(153, 102, 255, 0.4)'
                    ],
                    borderColor: [
                        'rgba(108, 0, 0, 1)',
                        'rgba(180, 0, 0, 1)',
                        'rgba(255, 69, 0, 1)',
                        'rgba(255, 159, 64, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(154, 205, 50, 1)',
                        'rgba(34, 139, 34, 1)',
                        'rgba(75, 208, 192, 1)',
                        'rgba(32, 158, 200, 1)',
                        'rgba(30, 144, 255, 1)',
                        'rgba(0, 0, 205, 1)',
                        'rgba(153, 102, 255, 1)'
                    ],
                    borderWidth: 1
                }]
            }
        });
    </script>
    <script>
        //-------------------Visit by League Bar Chart---------------------------------
        var c = document.getElementById("leagueChart");
        var ctx = c.getContext("2d");
        var myBarChart = new Chart(ctx, {
            type: 'doughnut',
            data:
            {
                labels: ["National", "American"],
                datasets: [{
                    label: 'Recorded Visits by League',
                    data: [@ViewBag.LeagueData],
                    backgroundColor: [
                        'rgba(255, 0, 0, 1)',
                        'rgba(0, 0, 255, 1)',
                    ],
                    borderColor: [
                        'rgba(0, 0, 0, 1)',
                        'rgba(0, 0, 0, 1)',
                    ],
                    borderWidth: 1
                }]
            }
        });
    </script>
}
